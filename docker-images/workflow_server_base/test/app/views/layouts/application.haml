!!!
%html(ng-app="WorkflowDevelopmentApplication")
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title {{$state.current.name}}
    %base{ href: '/' }
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    = yield
    
    / Preload the first visible templates for responsiveness
    %script{ type: 'text/ng-template', id: 'application.html' }
      = render partial: 'templates/application'

    %script{ type: 'text/ng-template', id: 'dashboard.html' }
      = render partial: 'templates/dashboard'
