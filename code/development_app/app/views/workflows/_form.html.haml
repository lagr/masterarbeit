= form_for @workflow do |f|
  - if @workflow.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workflow.errors.count, "error")} prohibited this workflow from being saved:"
      %ul
        - @workflow.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :user_id
    = f.text_field :user_id
  .actions
    = f.submit 'Save'
