%h1 Workflows

%table
  %thead
    %tr
      %th Name
      %th User
      %th Deployed
      %th
      %th
      %th

  %tbody
    - @workflows.each do |workflow|
      %tr
        %td= workflow.name
        %td= workflow.author.name
        %td= workflow.servers.length > 0
        %td= link_to 'Show', workflow
        %td= link_to 'Edit', edit_workflow_path(workflow)
        %td= link_to 'Destroy', workflow, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

