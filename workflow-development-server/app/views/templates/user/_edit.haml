.tab-content
  %md-card.user-metadata
    %md-card-content
      %form
        %md-input-container
          %label ID
          %input{ type: 'text', ng_model: 'pageCtrl.user.id', disabled: true }
        %md-input-container
          %label Firstname
          %input{ type: 'text', ng_model: 'pageCtrl.user.first_name', ng_disabled: '!pageCtrl.editing' }
        %md-input-container
          %label Lastname
          %input{ type: 'text', ng_model: 'pageCtrl.user.last_name', ng_disabled: '!pageCtrl.editing' }

  %md-card.worklist-items.card
    %md-data-table-toolbar
      %h2.md-title Worklist Items
      
    %md-data-table-container
      %table.md-primary{ "md-data-table" => true }
        %thead{ "md-table-head" => true }
          %td Version
          %td ID
        %tbody
          %tr{ "md-table-row" => true, ng_repeat: 'item in pageCtrl.user.worklist.worklist_items', ng_click: 'appCtrl.tabManagement.openPage("WorklistItem", item.id)' }
            %td.md-table-cell {{item.name}}
            %td.md-table-cell {{item.id}}

.tab-top-bar
  = render layout: 'templates/shared/top_bar' do
    = render partial: 'templates/shared/default_actions'

