.tab-content.workflow-designer{ process_designer: 'pageCtrl.workflowVersion' }
  %svg.workflow-designer--canvas{ ng_click: 'processDesigner.canvasClicked($event)',
    ng_mouseup:   'processDesigner.canvasMouseup($event)',
    ng_mousemove: 'processDesigner.canvasMousemove($event)' }

    %defs
      = render partial: 'templates/process_designer/definitions/grid'
      = render partial: 'templates/process_designer/definitions/marker_arrow'

    %rect.grid{ width: '100%', height: '100%', fill: 'url(#grid)', ng_click: 'processDesigner.canvasClicked($event)' }

    %g.process-elements{ transform: 'matrix(1,0,0,1,0,0)' }
      = render partial: 'templates/process_designer/process_elements'
      
    = render partial: 'templates/process_designer/circle_menu'

  = render partial: 'templates/process_designer/details_bar'
  = render partial: 'templates/process_designer/context_menu'
= render partial: 'templates/process_designer/top_bar'
